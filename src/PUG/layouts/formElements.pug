include ../includes/primitives/checkbox/checkbox.pug
include ../includes/primitives/radio/radio.pug
include ../includes/primitives/toggle/toggle.pug
include ../includes/primitives/likeBtn/likeBtn.pug
include ../includes/primitives/doubleSlider/doubleSlider.pug
include ../includes/primitives/rateBtn/rateBtn.pug

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        include ../includes/baseBlocks/script
    body
        .logo-wrap
            img(src = require("../../SVG/logo.svg"))

        .block-desc
            p.block-desc__txt checkbox buttons
            +checkbox({txt: {main: "Можно курить"}, active: true})
            +checkbox({txt: {main: "Можно с питомцами"}})
            +checkbox({txt: {main: "Можно пригласить гостей (до 10 человек)"}})

        .block-desc
            p.block-desc__txt radio buttons
            +radio({txt: "Мужчина", name: "sex", active: true})
            +radio({txt: "Женщина", name: "sex"})

        .block-desc
            p.block-desc__txt toggle
            +toggle({txt: "Получать спецпредложения", active: true})
            +toggle({txt: "Получать спецпредложения",})

        .block-desc
            p.block-desc__txt rich checkbox
            +checkbox({txt: {title: "Широкий коридор", main: "Ширина коридоров в номере не менее 91 см."}})
            +checkbox({txt: {title: "Помощник для инвалидов", main: "На 1 этаже вас встретит специалист и проводит до номера."}})

        .block-desc
            +likeBtn({amount: 2})
            +likeBtn({amount: 11, active: true})

        .block-desc
            +doubleSlider({title: "Range Slider", minValue: 0, maxValue: 15000, leftBaseValue: 5000, rightBaseValue: 10000})

        .block-desc
            +rateBtn({starAmount: 4})
            +rateBtn({starAmount: 5})


        img(src = require("../../IMG/BONES22.jpg"))
