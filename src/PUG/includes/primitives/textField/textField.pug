mixin textField (options)
    -
        var typeValue = options.type
        var placeholderValue = options.placeholder
        var nameValue = options.name
        var modificator = options.modificator

    if typeValue === "password"
        .text-field(class=modificator)
            input.text-field__input(type=typeValue placeholder=placeholderValue name=nameValue autocomplete="on")
    else
        .text-field(class=modificator)
            input.text-field__input(type=typeValue placeholder=placeholderValue name=nameValue)
